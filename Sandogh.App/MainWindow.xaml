                <Button x:Name="BtnTransaction" Content="تراکنش" Margin="5" HorizontalAlignment="left" VerticalAlignment="Top" Width="75" Click="BtnTransaction_Click"/>
            </DockPanel>
            <StackPanel>
                

            </StackPanel>
            <CalendarButton Content="CalendarButton"/>
            <Button Content="Button" d:LayoutOverrides="Height" Click="Button_Click"/>
        </StackPanel>


    </Grid>
